<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@drawable/item_background"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_text_border_bottom"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/item_advert_owners_work_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Android-developer" />

        <ImageView
            android:id="@+id/item_advert_owners_favorite_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:tint="#FF9800"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_favorite_black_24dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_advert_owners_salary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#F00"
        tools:text="від 15000₴ до 40000₴" />

    <TextView
        android:id="@+id/item_advert_owners_company_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        tools:text="Company" />

    <TextView
        android:id="@+id/item_advert_owners_location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="м. Вінниця" />

</LinearLayout>