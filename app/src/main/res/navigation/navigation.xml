<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_search">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.jobforstudent.ui.favorite.FavoriteFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/favorite_fragment" />
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.jobforstudent.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/notifications_fragment" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.jobforstudent.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/search_fragment" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.jobforstudent.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/profile_fragment" >
        <action
            android:id="@+id/action_navigation_profile_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/navigation_profile" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.jobforstudent.ui.login.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_navigation_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_profile" />
    </fragment>
    <fragment
        android:id="@+id/workFragment"
        android:name="com.example.jobforstudent.ui.work.WorkFragment"
        android:label="work_fragment"
        tools:layout="@layout/work_fragment" />
    <fragment
        android:id="@+id/editAdvertFragment"
        android:name="com.example.jobforstudent.ui.editadvert.EditAdvertFragment"
        android:label="EditAdvertFragment" />
</navigation>
